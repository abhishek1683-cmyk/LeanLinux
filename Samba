sudo apt install samba smbclient cifs-utils -y && sudo nano /etc/samba/smb.conf && systemctl status smbd




[pi]
comment= Pi
path=/
browseable=Yes
writeable=Yes
only guest=no
create mask=0777
directory mask=0777
public=no

smbpasswd -a <username> <password> <password>


sudo ufw allow samba

sudo smbpasswd -a <username> -w <pw> && sudo systemctl restart smbd.service


